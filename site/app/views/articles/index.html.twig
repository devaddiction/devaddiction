{% extends parent_layout|default("layouts.general") %}

{% block header %}
<div class="bs-header" id="content">
      <div class="container">
        <h1>Articles</h1>
        <p>An overview of Bootstrap, how to download and use, basic templates and examples, and more.</p>
    </div>
{% endblock %}

{% block content %}
<article class="list">

    <h1>Articles</h1>

    <ul>
        {% for article in list.getArticles() %}
        <li>
            <a href="/articles/{{ article.getSlug() }}">{{ article.getTitle() }}</a>
            -
            <span>{{ article.getCreated()|date('jS F, Y') }}</span>
        </li>
        {% endfor %}
    </ul>

</article>
{% endblock %}
