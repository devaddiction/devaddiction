{% extends parent_layout|default("layouts.general") %}

{% block content %}
<article class="list">

    <h1>Articles</h1>

    <ul>
        {% for article in list.getArticles() %}
        <li>
            <a href="/articles/{{ article.getSlug() }}">{{ article.getTitle() }}</a>
            -
            <span>{{ article.getCreated()|date('jS F, Y') }}</span>
        </li>
        {% endfor %}
    </ul>

</article>
{% endblock %}
