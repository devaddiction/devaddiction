            "role": "Developer"
        }
    ],
    "license": "MIT",
    "keywords": ["devaddiction", "laravel", "php"],

    "require": {
        "laravel/framework": "4.0.*",
        "rcrowe/twigbridge": "0.5.*",
        "michelf/php-markdown": "1.3.*",
        "symfony/yaml": "2.3.*",
        "kazan/articler": "dev-master"
    },

    "autoload": {
        "classmap": [
            "app/controllers",
            "app/tests",
            "app/libs"
        ]
    },

    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "dev"
}
