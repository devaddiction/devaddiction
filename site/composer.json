{
    "name": "devaddiciton.com/site",
    "type": "project",
    "homepage": "http://devaddiction.com/",
    "description": "DevAddiction.com",
    "authors": [
        {
            "name": "Fran √Ålvarez",
            "email": "fjalvarez@gmail.com",
            "homepage": "http://devaddiction.com/",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "keywords": ["devaddiction", "fjalvarez", "laravel", "php"],

    "require": {
        "laravel/framework": "4.0.*",
        "rcrowe/twigbridge": "master as 0.4.0",
        "leafo/lessphp": "0.3.*@dev",
        "way/generators": "1.0.*@dev",
        "michelf/php-markdown": "1.3.*",
        "jasonlewis/basset": "dev-master",
        "symfony/yaml": "2.3.*",
        "cssmin/cssmin": "3.0.1",
        "jasonlewis/expressive-date": "1.0.*",
        "webignition/json-pretty-print": "dev-master",
    },

    "autoload": {
        "classmap": [
            "app/controllers",
            "app/tests",
            "app/libs"
        ]
    },

    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "cssmin/cssmin",
                "version": "3.0.1",
                "dist": {
                    "url": "http://cssmin.googlecode.com/files/cssmin-v3.0.1.php",
                    "type": "file"
                },
                "autoload": { "classmap": [ "cssmin-v3.0.1.php" ] }
            }
        }
    ],

    "scripts": {
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },

    "config": {
        "preferred-install": "dist"
    },

    "minimum-stability": "dev"
}
